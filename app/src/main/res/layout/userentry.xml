                android:id="@+id/text_saida_dd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text=""
                android:textColor="@color/teal_200"
                android:textStyle="" />

            <TextView
                android:id="@+id/text_saida_tre1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text=""
                android:textColor="@color/teal_200"
                android:textStyle="" />

            <TextView
                android:id="@+id/text_saida_tre2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
