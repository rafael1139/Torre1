<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:screenOrientation="portrait"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/text_title_veiculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecione o veículo"
        android:textSize="30dp"
        style="@style/Button3"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="240dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
        android:id="@+id/iconeuser"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_account"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="160dp" />

    <TextView
        android:id="@+id/text_nomeuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Black2"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text=""
        android:layout_marginVertical="8dp"
        android:layout_marginStart="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/iconeuser"
        app:layout_constraintStart_toEndOf="@+id/iconeuser"
        />


    <Button
        android:id="@+id/bt_deslogar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="90dp"
        android:background="@color/black"
        android:text="Desconectar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/bt_visualizar"
        android:layout_width="232dp"
        android:layout_height="45dp"
        android:layout_marginVertical="85dp"
        android:background="@color/black"
        android:text="Movimentação"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bt_deslogar"
        app:layout_constraintEnd_toEndOf="@+id/bt_deslogar"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@+id/bt_deslogar" />

    <Spinner
        android:id="@+id/spinner"
        style="@style/Pneu"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/bt_deslogar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title_veiculo"
        app:layout_constraintVertical_bias="0.189" />

    <EditText
        android:id="@+id/pneu_dd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/text_title_veiculo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pneu_de"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/pneu_dd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>